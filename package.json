{
  "name": "ledger-wallet-service",
  "version": "1.0.0",
  "description": "Ledger-based wallet and transfer service for fintech application",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && yarn build:frontend",
    "build:frontend": "cd frontend && vite build",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "dev:frontend": "cd frontend && vite",
    "migrate": "node-pg-migrate",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:reset": "ts-node scripts/reset-db.ts",
    "test": "jest --silent --verbose",
    "test:e2e": "jest --config jest.e2e.config.js --silent --verbose",
    "test:all": "yarn test && yarn test:e2e",
    "migrate:test": "node -r dotenv/config node_modules/.bin/node-pg-migrate up dotenv_config_path=.env.test"
  },
  "keywords": [
    "ledger",
    "wallet",
    "fintech"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.7.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@types/yamljs": "^0.2.34",
    "@vitejs/plugin-react": "^4.2.1",
    "jest": "^29.7.0",
    "node-pg-migrate": "^6.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
